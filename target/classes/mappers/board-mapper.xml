<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.dao.BookDAO">

    <resultMap id="bookResult" type="com.example.bean.BookVO">
        <id property="id" column="ID"/>
        <result property="title" column="title"/>
        <result property="author" column="author"/>
        <result property="publisher" column="publisher"/>
        <result property="published_date" column="published_date"/>
        <result property="genre" column="genre"/>
        <result property="cnt" column="cnt"/>
    </resultMap>

    <select id="getBookList" resultMap="bookResult">
        SELECT * FROM BOOK ORDER BY id ASC
    </select>

    <select id="searchBooks" resultMap="bookResult">
        SELECT * FROM BOOK WHERE title LIKE CONCAT('%', #{keyword}, '%')
    </select>

    <select id="getBook" resultMap="bookResult">
        SELECT * FROM BOOK WHERE id = #{id}
    </select>

    <insert id="insertBook">
        INSERT INTO BOOK (title, author, publisher, published_date, genre)
        VALUES (#{title}, #{author}, #{publisher}, #{published_date}, #{genre})
    </insert>

    <update id="updateBook">
        UPDATE BOOK SET
                        title = #{title},
                        author = #{author},
                        publisher = #{publisher},
                        published_date = #{published_date},
                        genre = #{genre}
        WHERE ID = #{id}
    </update>

    <delete id="deleteBook">
        DELETE FROM BOOK WHERE ID = #{id}
    </delete>

</mapper>